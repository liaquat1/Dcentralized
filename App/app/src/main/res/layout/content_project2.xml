<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dcentralized.studywallet.activities.ProjectActivity"
    tools:showIn="@layout/activity_project2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_date_range" />

            <TextView
                android:id="@+id/tvProjectDate"
                style="@style/AppTheme.ProjectTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="6 Weeks" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/ivDifficulty"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_difficulty" />

            <TextView
                android:id="@+id/tvProjectDifficulty"
                style="@style/AppTheme.ProjectTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="6.5/10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProjectCoins"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_studiemunt" />

            <TextView
                android:id="@+id/tvProjectCoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.ProjectTextStyle"
                android:layout_weight="10"
                android:text="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDescription"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_description" />

            <TextView
                android:id="@+id/tvProjectDescription"
                style="@style/AppTheme.ProjectTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/text_test" />
        </LinearLayout>

        <Button
            android:id="@+id/btnApply"
            style="@style/AppTheme.StudyCoinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_round_corner"
            android:text="Apply"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
