<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        style="@style/AppTheme.StudyCoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvHighscoreName"
        android:textStyle="normal|bold"
        android:layout_alignParentLeft="true" />

    <TextView
        style="@style/AppTheme.StudyCoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvHighscoreName"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvHighscoreRanking"
        android:layout_alignParentRight="true" />

    <TextView
        style="@style/AppTheme.StudyCoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHighscoreName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/tvHighscoreDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

</RelativeLayout>